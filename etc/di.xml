<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Ksolves\Fam\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Ksolves\Fam\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">fam</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Ksolves\Fam\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Config\Model\Config">
        <plugin name="fam_admin_system_config_save_plugin" type="\Ksolves\Fam\Plugin\ConfigPlugin" sortOrder="1"/>
    </type>
    <!-- Override Creditmemo Refund Button    -->
    <preference for="\Magento\Sales\Block\Adminhtml\Order\Creditmemo\Create\Items" type="\Ksolves\Fam\Block\Adminhtml\Order\Creditmemo\Create\Items"/>
</config>