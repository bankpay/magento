<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="fam-sdk" type="host">https://js.joinfam.com</value>
                <value id="crypto-js" type="host">https://cdnjs.cloudflare.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="verify-js" type="host">http://3.8.226.126</value>
                <value id="staging-api" type="host">https://api-staging.joinfam.com</value>
                <value id="staging-live-api" type="host">https://api-staging-live.joinfam.com</value>
                <value id="staging-dev-api" type="host">https://api-staging-dev.joinfam.com</value>
            </values>
        </policy>
         <policy id="font-src">
            <values>
                <!--CDN-->
                <value id="fonts" type="host">https://js.joinfam.com</value>
            </values>
        </policy>
         <policy id="style-src">
            <values>
                <!--CDN-->
                <value id="style" type="host">https://js.joinfam.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>

